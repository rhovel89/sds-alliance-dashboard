import { Outlet, NavLink, useParams } from 'react-router-dom';
import '../styles/dashboard-zombie.css';

export default function DashboardLayout() {
  const { allianceId } = useParams<{ allianceId: string }>();

  if (!allianceId) {
    return <div style={{ padding: 20 }}>No alliance selected.</div>;
  }

  const base = /dashboard/;

  return (
    <div className='dashboard-root'>
      <aside className='dashboard-sidebar'>
        <h2 className='sidebar-title'>ðŸ§Ÿ {allianceId.toUpperCase()}</h2>
        <nav>
          <NavLink to={base}>Dashboard</NavLink>
          <NavLink to={${base}/hq-map}>HQ Map</NavLink>
          <NavLink to={${base}/events}>Events</NavLink>
        </nav>
      </aside>

      <main className='dashboard-main'>
        <Outlet />
      </main>
    </div>
  );
}
