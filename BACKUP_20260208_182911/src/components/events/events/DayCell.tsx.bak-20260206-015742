export default function DayCell({ date, events, timezone, onClick }: any) {
  return (
    <div
      className='calendar-day'
      onClick={onClick}
      style={{
        cursor: 'pointer',
        border: '1px solid rgba(255,0,0,0.6)',
        padding: '6px',
        minHeight: '36px'
      }}
    >
      <div className='day-number'>{date.getDate()}</div>
    </div>
  );
}
